<%= simple_form_for @order do |f| %>
<%= f.label :username, "Введите ваше имя" %>
<br>
<%= f.text_field :username, class: "form-control" %>
<br>
<%= f.label :adress_from, "Адрес откуда едите" %>
<br>
<%= f.text_field :adress_from, class: "form-control" %>
<br>
<%= f.label :adress_to, "Адрес куда едите" %>
<br>
<%= f.text_field :adress_to, class: "form-control" %>
<br>
<%= f.label :phone_number, "Ваш номер телефона" %>
<br>
<%= f.text_field :phone_number, class: "form-control" %>
<br>
<%= f.label :home_adress, "Номер дома" %>
<br>
<%= f.text_field :home_adress, class: "form-control" %>
<br>

<%= f.submit "Заказать", class: "btn btn-success" %>

<% end %>